<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/absoluteLayoutRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="20dip" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/common_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:text="支付宝+微信支付费率大优惠"
                android:textColor="#ff5400"
                android:textSize="20.001sp" />

            <View
                android:id="@+id/seperateLine"
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:layout_below="@id/common_dialog_title"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dip"
                android:background="#dbdbdb" />

            <TextView
                android:id="@+id/common_dialog_text_line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seperateLine"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:gravity="left"
                android:text="支付宝支付0费率，微信支付0.3%费率，还有返佣更多惊喜，敬请期待。"
                android:textColor="#aaaaaa"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/checkBoxRead"
                style="@style/CommonCheckBoxStyle"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="140dip"
                android:checked="false"
                android:text="@string/check_data_checkbox"
                android:textColor="#999999"
                android:textSize="16.001sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="170dip" >

                <Button
                    android:id="@+id/buttonReturn"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/grey_bt_selector"
                    android:gravity="center"
                    android:text="立即体验"
                    android:textColor="#000000"
                    android:textSize="18.3sp" />

                <Button
                    android:id="@+id/buttonOk"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/green_bt_selector"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="18.3sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>