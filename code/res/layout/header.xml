<?xml version="1.0" encoding="utf-8"?>
<com.smona.app.preinstallclient.view.HeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/header_margin_left"
    android:paddingRight="@dimen/header_margin_right"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/head_title_height" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:textColor="#FF5400"
            android:layout_centerVertical="true"
            android:text="@string/hot_title" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/header_underline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_underline_height"
            android:background="#aaaaaa"
            android:gravity="center_vertical" />
    </LinearLayout>

</com.smona.app.preinstallclient.view.HeaderView>