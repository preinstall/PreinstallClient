<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="TextShadow">
        <item name="android:ellipsize">marquee</item>
        <item name="android:shadowRadius">0.05</item>
        <item name="android:shadowColor">#B0000000</item>
    </style>

    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style> 
    
     <style name="NoTitle">
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DropTargetContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/del_uninst_bg</item>
    </style>

    <style name="DropTarget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item" parent="TextShadow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#808080</item>
    </style>
    
      <style name="item_main_text" parent="TextShadow">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="download_appName" parent="TextShadow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/download_status_height</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dialog_windowTitleStyle">
        <item name="android:textColor">#E47833</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="dialog_data_hint" parent="@android:Theme.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_windowTitleStyle</item>
        <item name="android:windowBackground">@drawable/dialog_full_light</item>
    </style>

    <style name="dialog_hint" parent="TextShadow"></style>

    <style name="hint_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selected_hint</item>
    </style>
    
     <style name="CommonCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/commoncheckboxstyle</item>
    </style>
    
      <style name="commonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/alltransparent</item>
        <!-- 无背景 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
     

</resources>